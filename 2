using System;

class Pessoa
{
    public string Nome;
}

class Program
{
    static void Main()
    {
        Pessoa p1 = new Pessoa();
        p1.Nome = "marcos";
        Pessoa p2 = p1;
        p2.Nome = "verstappen";

        Console.WriteLine("p1: " +p1.Nome);
        Console.WriteLine("p2: " +p2.Nome);
    }
}
